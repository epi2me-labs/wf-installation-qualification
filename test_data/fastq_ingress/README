│   ├── dir03
│   │   └── reads0.fastq
│   └── unclassified
│       └── reads0.fastq

# take dir01, dir02, dir03 (we allow sub-sub-dirs as long as they don't contain FASTQ files)
├── case09
│   ├── dir01
│   │   ├── garbage.txt
│   │   ├── reads0.fastq
│   │   ├── reads1.fastq
│   │   └── reads2.fastq
│   ├── dir02
│   │   ├── reads0.fastq
│   │   ├── reads1.fastq
│   │   └── reads2.fastq
│   └── dir03
│       ├── garbage
│       │   └── garbage.txt
│       └── reads0.fastq

# throw error 'Input directory ... cannot contain more than one level of sub-directories with FASTQ files.'
├── case10
│   ├── dir01
│   │   ├── garbage.txt
│   │   ├── reads0.fastq
│   │   ├── reads1.fastq
